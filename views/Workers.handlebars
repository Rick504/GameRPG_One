{{#data}}
<section class="section_actions">
    <h1>Trabalhadores</h1>

    <div class="btns_workers">

        <a href="/purchase_gold">
            <button  onclick="btnReload()"> Comprar trabalhador </button>
        </a>

        <p>Custo do trabalhador: 2 Ouro, 13 Suprimentos. </p>

        <p>Total de Trabalhadores Parados: </p>

        <div id="w_workes"></div>

        <a href="/updateWorkers_gold">
