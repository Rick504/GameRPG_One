                <button onclick="btnReload()"> Produzir +5 Madeira </button>
            </a>

        <p> Colque Trabalhadores para produzir Madeira, cada trabalhador produz 5 Madeira por turno.

    </div>
{{/data}}

<script>

    (async() => {
        try {
            const response = await fetch('/main_users')
            const data = await response.json()
            w_MainShow(data)

        } catch (error) { console.log(error) }
    })()

    const w_MainShow = (users) => {

        var workers
        users.map((item) => {
            return workers = item.workers
        })

        document.querySelector('#w_workes').innerHTML = workers
    }

</script>

