<div class="container">
    <div class="row">
        <div class="col-6 d-flex justify-content-end align-items-center">
            <a href="/registration" id="btn-resgister" class="btn btn-success mt-5">Cadastrar Agora</a>
        </div>
        <div class="offset-1 col-5 mt-5">
            <h1>Login</h1>
            <form method="post" action="/auth">
                <div>
                    <input type="text" name="user_name">
                    <input type="password" name="password" class="mt-3">
                </div>
                {{#if message}}
                    <div class="msg-error">
                         {{message}}
                    </div>
                {{/if}}
                <br>
                <button type="submit" class="btn btn-primary">Entrar</button>
            </form>
        </div>
    </div>
</div>

