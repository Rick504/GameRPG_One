<!-- Socket.io -->
<header>
    <script src="/socket.io/socket.io.js"></script>

        <div id="elementos_turno">
          
            <div id="tempo_turno" style="position: absolute; left: 600px; margin-top: 5px;"></div>
            <div style="position: absolute; left: 622px; margin-top: 5px;">minutos para o próximo turno.</div>
            <div id="res"></div>
        </div>

    <script>
            const socket = io()

            socket.on('cart', (prime) => {
                const res = document.getElementById('res')
                res.innerHTML = prime
            })

            var count = new Number();
            var count = 60;

            function start(){

                if ((count - 1) >= 0){
                count -= 1;
                if (count == 0) {
                    count = "Atualize a Pagina";
                }else if(count < 10){
                    count = "0"+count;
                }
                tempo_turno.innerText=count;
                setTimeout('start();', 5000);

                }
            }

            start()
    </script>
</header>
