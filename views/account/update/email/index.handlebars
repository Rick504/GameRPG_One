<div class="container formRegister">
    <div class="row">
        <div class="offset-4 col-6 mt-5">
            <h1>Nome do Game</h1>
        </div>
    </div>
        <div class="row">
            <form method="post" action="/update_user_email" class="offset-4 col-3" autocomplete="off">
                    <label>E-mail</label>
                    <div class="form-element">
                        <input
                            type="email"
                            name="email"
                            required
                        >
                         {{!-- Por favor, insira um endereço de e-mail válido.  --}}
                    </div>
                    <label>Digite seu E-mail novamente</label>
                    <div class="form-element">
                        <input
                            type="email"
                            name="email_confirm"
                            required
                        >
                         {{!-- Por favor, insira um endereço de e-mail válido.  --}}
                    </div>
                     {{#if message}}
                        <div class="msg-error">
                            {{message}}
                        </div>
                     {{/if}}
                    <div class="d-flex justify-content-center mt-4">
                        <button
                            type="submit"
                            class="btn btn-success"
                        >
                            Atualizar
                        </button>
                    </div>
            </form>
        </div>
    </div>
